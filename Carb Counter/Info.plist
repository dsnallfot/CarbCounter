<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>AppIntents</key>
    <array>
        <dict>
            <key>IntentClass</key>
            <string>UpdateRegisteredAmountIntent</string>
        </dict>
    </array>
    
    <!-- Custom URL Scheme for x-callback-url handling -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.dsnallfot.CarbsCounter</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>carbcounter</string> <!-- This is your custom URL scheme -->
            </array>
        </dict>
    </array>
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Permissions for biometric authentication -->
    <key>NSBiometricUsageDescription</key>
    <string>This app requires biometric authentication to securely authenticate your identity for sending meal requests.</string>
    
    <!-- Permissions for camera and photo library access -->
    <key>NSCameraUsageDescription</key>
    <string>This app requires access to the camera to capture meal photos.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app requires access to the photo library to select meal images.</string>
    
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>We need to save meal analysis images to your Photos library.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>We need access to your Photos library to save meal analysis images.</string>

    <!-- iCloud configuration -->
    <key>NSUbiquitousContainers</key>
    <dict>
        <key>iCloud.com.dsnallfot.CarbsCounter</key>
        <dict>
            <key>NSUbiquitousContainerIsDocumentScopePublic</key>
            <true/>
            <key>NSUbiquitousContainerName</key>
            <string>CarbsCounter</string>
            <key>NSUbiquitousContainerSupportedFolderLevels</key>
            <string>Any</string>
        </dict>
    </dict>

    <!-- Scene configuration for app -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                    <key>UISceneStoryboardFile</key>
                    <string>Main</string>
                </dict>
            </array>
        </dict>
    </dict>

    <!-- File sharing enabled -->
    <key>UIFileSharingEnabled</key>
    <true/>

    <!-- iCloud container identifiers -->
    <key>com.apple.developer.icloud-container-identifiers</key>
    <array>
        <string>iCloud.com.dsnallfot.CarbsCounter</string>
    </array>

    <!-- iCloud services -->
    <key>com.apple.developer.icloud-services</key>
    <array>
        <string>CloudDocuments</string>
    </array>

    <!-- Ubiquity key-value store identifier -->
    <key>com.apple.developer.ubiquity-kvstore-identifier</key>
    <string>iCloud.com.dsnallfot.CarbsCounter</string>
</dict>
</plist>
